{
    "name": "papagaio",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "start": "rndebugger-open && node node_modules/react-native/local-cli/cli.js start",
        "ios": "react-native run-ios",
        "android": "cd ./android && ./gradlew app:assembleDebug && ./gradlew installDebug",
        "test": "jest",
        "lint": "eslint --ext .js .",
        "extract-messages": "rm src/i18n/base.json && NODE_ENV=production extract-messages -l=base -o src/i18n -d base --flat true 'src/**/!(*.test).js' && prettier --write src/i18n/base.json"
    },
    "dependencies": {
        "flow-bin": "0.86.0",
        "immutable": "^4.0.0-rc.12",
        "intl": "^1.2.5",
        "ramda": "^0.26.1",
        "react": "16.6.3",
        "react-intl": "^2.8.0",
        "react-native": "0.58.3",
        "react-native-navigation": "^2.8.0",
        "react-native-svg": "^9.2.2",
        "react-redux": "^6.0.0",
        "redux": "^4.0.1",
        "redux-actions": "^2.6.4",
        "redux-saga": "^1.0.1",
        "reselect": "^4.0.0",
        "styled-components": "^4.1.3"
    },
    "devDependencies": {
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "^10.0.1",
        "babel-jest": "24.0.0",
        "babel-plugin-module-resolver": "^3.1.3",
        "detox": "^10.0.7",
        "eslint": "^5.13.0",
        "eslint-config-react-app": "^3.0.6",
        "eslint-plugin-flowtype": "^3.2.1",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-jsx-a11y": "^6.2.0",
        "eslint-plugin-react": "^7.12.4",
        "extract-react-intl-messages": "^0.13.0",
        "jest": "24.0.0",
        "metro-react-native-babel-preset": "0.51.1",
        "prettier": "^1.16.3",
        "react-native-debugger-open": "^0.3.17",
        "react-test-renderer": "16.6.3"
    },
    "jest": {
        "preset": "react-native",
        "testPathIgnorePatterns": [
            "e2e",
            "node_modules"
        ]
    },
    "detox": {
        "configurations": {
            "ios.sim.debug": {
                "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/incubator.app",
                "build": "yarn ios",
                "type": "ios.simulator",
                "name": "iPhone 7"
            }
        },
        "test-runner": "jest"
    }
}
